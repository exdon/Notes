{
    "rulesDirectory": [
        "node_modules/tslint-microsoft-contrib",
        "node_modules/codelyzer",
        "node_modules/angl-archtslint/rules"
    ],
    "extends": [
        "tslint-microsoft-contrib",
        "angl-archtslint/tslint-config"
    ],
    "rules": {
        "member-access": true,
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "no-null-keyword": false,
        "prefer-function-over-method": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "arrow-parens": true,
        "linebreak-style": [
            true,
            "CRLF"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "directive-selector": [
            true,
            "attribute",
            "afe",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "afe",
            "kebab-case"
        ],
        "missing-jsdoc": false,
        "no-relative-imports": false,
        "no-parameter-properties": false,
        "prefer-array-literal": false,
        "array-type": [
            true,
            "generic"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-angle-bracket-type-assertion": true,
        "prefer-type-cast": false,
        "no-import-side-effect": [
            true,
            {
                "ignore-module": "(rxjs.*|.*.css|zone.js.*)$"
            }
        ],
        "deprecation": true,
        "no-submodule-imports": [
            true,
            "@angular/platform-browser",
            "uuid",
            "core-js",
            "zone.js",
            "@angular/platform-browser-dynamic",
            "@angular/core/testing",
            "rxjs",
            "lodash",
            "@afe/base-geral"
        ],
        "max-line-length": [
            true,
            {
                "limit": 140,
                "ignore-pattern": "^import |^export {(.*?)}|( )*(const|let|private)*( )*(\\w)+(:| =) ('|`)(((?!(' \\+ '|\\${)).)*|)('|`)(,|;)|( )*\/\/"
            }
        ],
        "no-this-assignment": [
            true,
            {
                "allow-destructuring": true
            }
        ],
        "snt-arch-components": false,
        "no-inferrable-types": false,
        "cyclomatic-complexity": [
            true,
            10
        ],
        "no-implicit-dependencies": true,
        "no-unnecessary-local-variable": false,
        "export-name": false,
        "newline-before-return": false,
        "no-unused-variable": false,
        "no-unsafe-any": false,
        "no-require-imports": false,
        "no-var-requires": false,
        "use-view-encapsulation": false,
        "newline-per-chained-call": false
    }
}